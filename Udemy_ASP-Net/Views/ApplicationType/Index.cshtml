@model IEnumerable<Models_Lib.ApplicationType>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Application type list</h2>
        </div>
        <div class="col-6 text-right">
            <p>
                <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-primary">
                    Create new type
                </a>
            </p>
        </div>
    </div>

    <br /><br />

    @if (Model.Any())
    {

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cat in Model)
        {
            <tr>
                <td width="50%">@cat.Name</td>
                <td class="text-center">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="ApplicationType" asp-route-Id="@cat.Id" asp-action="Edit" class="btn btn-primary mx-2">
                            Edit
                        </a>
                        <a asp-controller="ApplicationType" asp-route-Id="@cat.Id" asp-action="Delete" class="btn btn-danger mx-2">
                            Delete
                        </a>
                    </div>
                </td>
            </tr>
            
    }
        </tbody>
    </table>
    }
    else
    {
        <p>No type exist.</p>
    }
</div>

