@model IEnumerable<Models_Lib.Product>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product list</h2>
        </div>
        <div class="col-6 text-right">
            <p>
                <a asp-action="Upsert" class="btn btn-primary">
                    Create new product
                </a>
            </p>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {

        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Application type
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cat in Model)
                {
                <tr>
                    <td width="30%">@cat.Name</td>
                    <td width="10%">@cat.Price</td>
                    <td width="20%">@cat.Category.Name</td>
                    <td width="20%">@cat.ApplicationType.Name</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-route-Id="@cat.Id" asp-action="Upsert" class="btn btn-primary mx-2">
                                Edit
                            </a>
                            <a asp-route-Id="@cat.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No product exist.</p>
    }
</div>

